{
  "extends": "./tsconfig.json",
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "src/test",
    "dist",
    "docs"
  ],
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "paths": {
      "ok": ["src/index.ts"]
    }
  }
}
